---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../icons/SocialPill.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ToolIcon from "../icons/Tool.astro";
import CodeIcon from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Portfolio de eolunas - Desarrollador y Programador Web"
  description="Contrata el mejor talento par desarrollar tus paginas web y tener un despliegue exitoso."
>
  <main>
    <SectionContainer class="py-20">
      <img
        class="rounded-full size-20 m-2"
        src="https://lh3.googleusercontent.com/a/ACg8ocJp7UNHYn1L3vzHQqpWrod9wD5sfIMpQMMaR2gjT-WXnhb3=s329-c-no"
        alt="eolunas dev avatar"
      />
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4">
        Hey, soy eolunas
        <a
          class="flex justify-center items-center"
          href="https://www.linkedin.com/in/eolunas"
          target="_blank"
          rel="noopener"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-2xl text-white opacity-80 text-wrap">
        <span>Ingeniero Mecatronico y desarrollador Web</span>. <span
          class="opacity-80">Bogot√°, Colombia co</span
        >. Especializado en crear aplicaciones personalizadas y llamativas.
      </h2>

      <nav class="flex justify-start items-center gap-x-6">
        <SocialPill href="https://www.linkedin.com/in/eolunas">
          <LinkedInIcon class="size-6 text-white" />
          <span class="text-white">LinkedIn</span>
        </SocialPill>
        <SocialPill href="https://www.github.com/eolunas">
          <GitHubIcon class="size-6 text-white" />
          <span class="text-white">GitHub</span>
        </SocialPill>
        <SocialPill href="https://www.github.com/eolunas">
          <MailIcon class="size-6 text-white" />
          <span class="text-white">eolunas@gmail.com</span>
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experience" class="py-3">
      <h2
        class="flex items-center gap-x-2 text-2xl font-semibold text-white py-4"
      >
        <ToolIcon class="size-8" /> Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects" class="py-3">
      <h2
        class="flex items-center gap-x-2 text-2xl font-semibold text-white py-4"
      >
        <CodeIcon class="size-8" /> Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
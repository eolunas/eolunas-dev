---
import SectionContainer from "@/components/SectionContainer.astro";
import Badge from "@/components/Badge.astro";
import Layout from "@/layouts/Layout.astro";
import SocialPill from "@/icons/SocialPill.astro";
import LinkedInIcon from "@/icons/LinkedIn.astro";
---

<Layout
  title="Design System portfolio.dev"
  description="Catalogo de componentes de portfolio eolunas.dev"
>
  <SectionContainer id="bagde" class="pt-20 lg:pt-28 flex flex-col gap-y-10">
    <article class="mb-10">
      <h1 class="mb-4 text-xl font-bold">&lt; Badge /&gt;</h1>
      <Badge>Tailwind</Badge>
    </article>

    <article class="mb-10">
      <h1 class="mb-4 text-xl font-bold">&lt; SocialPill /&gt;</h1>
      <SocialPill href="https://www.linkedin.com/in/eolunas">
        <LinkedInIcon class="size-6 text-white" />
        <span class="text-white hidden md:flex">LinkedIn</span>
      </SocialPill>
    </article>
  </SectionContainer>
</Layout>

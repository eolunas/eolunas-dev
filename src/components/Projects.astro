---
import NextJSIcon from "../icons/NextJS.astro";
import TailwindIcon from "../icons/TailwindCSS.astro";
import HtmlIcon from "../icons/Html.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJSIcon,
  },
  TAILWIND: {
    name: "Tailwind-CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-white/20 text-white",
    icon: HtmlIcon,
  },
};
const PROJECTS = [
  {
    title: "Travel Web",
    description: "Lorem ipsum ...",
    link: "https://eolunas.github.io/travel-web/",
    github: "https://github.com/eolunas/travel-web",
    image: "/projects/travelweb.webp",
    tags: [TAGS.HTML, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ title, description, link, github, image, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span class={`flex items-center gap-x-2 rounded-full text-xs py-2 px-2 ${tag.class}`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}

---
interface Props {
  date: string;
  title: string;
  company: string;
  location: string;
  description: string;
}
const { date, title, company, location, description } = Astro.props;
---

<span
  class="mt-2.5 absolute flex items-center justify-center w-3 h-3 bg-blue-400 rounded-full -start-1.5 ring-4 ring-white dark:ring-gray-900 dark:bg-blue-900"
>
</span>
<h3
  class="flex items-center mb-1 text-lg font-semibold text-yellow-200"
>
  <span>{title}</span>
  <span
    class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ms-3"
    >{location}</span
  >
</h3>
<time
  class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
  >{date}</time
>
<span
  class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
>
  {company}
</span>
<p
  class="mb-4 text-base text-pretty font-normal text-gray-500 dark:text-gray-400"
>
  {description}
</p>

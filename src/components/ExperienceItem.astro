---
interface Props {
  date: string;
  title: string;
  company: string;
  location: string;
  description: string;
}
const { date, title, company, location, description } = Astro.props;
---

<span
  class={`
  absolute mt-2.5 w-3 h-3 rounded-full
  flex items-center justify-center  
  bg-carrigreen -start-1.5 ring-4 ring-gray-300
  dark:bg-purple-600 dark:ring-white/80"
`}
>
</span>
<h3
  class="flex items-center mb-1 text-lg font-semibold text-marrsgreen dark:text-carrigreen"
>
  <span>{title}</span>
  <span
    class="bg-gray-300 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ms-3"
    >{location}</span
  >
</h3>
<time
  class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-white"
  >{date}</time
>
<span
  class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-white"
>
  {company}
</span>
<p
  class="mb-4 text-base text-pretty font-normal text-gray-500 dark:text-white"
>
  {description}
</p>

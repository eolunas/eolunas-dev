---
interface Props {
  date: { start: string; end: string };
  title: string;
  company: string;
  location: string;
  description: string;
}
const { date, title, company, location, description } = Astro.props;
---

<span
  class={`
  absolute mt-2 w-3 h-3 rounded-full
  flex items-center justify-center  
  bg-carrigreen -start-1.5 ring-4 ring-white/70
  dark:bg-purple-700 dark:ring-gray-300"
  `}
>
</span>
<h3
  class={`
  mb-2 text-lg font-semibold text-marrsgreen gap-y-2
  flex flex-col-reverse items-start justify-between
  dark:text-carrigreen`}
>
  {title}
  <span
    class={`
    w-[155px] p-1 rounded
    bg-white/70 text-carrigreen text-sm font-medium text-center  
    dark:bg-gray-300 dark:text-purple-700`}
  >
    {date.start} - {date.end}
  </span>
</h3>
<span
  class={`
  block mb-1 text-sm font-normal leading-none text-black 
  dark:text-white/80`}
>
  {company}
</span>
<span
  class={`
  block mb-2 text-sm font-normal leading-none text-black 
  dark:text-white/80`}
>
  {location}
</span>

<p
  class={`
  w-11/12 text-base text-pretty font-normal text-gray-500 
  dark:text-white`}
>
  {description}
</p>
